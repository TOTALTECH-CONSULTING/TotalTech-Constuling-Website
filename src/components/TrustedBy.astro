---
import Slider from "./Slider";

import { getCollection } from "astro:content";

const testimonials = (await getCollection("testimonials"));

// remove public from the image path
testimonials.forEach((testimonial) => {
  testimonial.data.image = testimonial.data.image.replace("/public", "");
});


---

<section class="section">
  <!-- background image -->
  <main class="main">
    <!-- content -->
    <div class="content">
      <div class="success">
        <svg
          width="128"
          height="3"
          viewBox="0 0 128 3"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path d="M0 1.5H128" stroke="#F0840E" stroke-width="3"></path>
        </svg>

        <p>REAL RESULTS, REAL IMPACT</p>
      </div>
      <h1 class="secondary">
        Trusted by
        <span class="elevate"> Industry Experts</span>
      </h1>
      <Slider
        client:load
        testimonials={testimonials}
      />
    </div>
  </main>
</section>

<style>
  .section {
    width: 100%;
    display: flex;
    padding: 4rem 0rem;
    background-color: var(--primary);
  }

  .main {
    max-width: 1440px;
    margin: auto;
    width: 100%;
    height: full;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .main h1 {
    line-height: 50px;
  }

  .main .elevate {
    color: var(--accent);
    font-size: 56px;
    font-weight: 700;
  }

  .main .secondary {
    color: white;
    font-size: 56px;
    font-weight: 700;
  }

  .main p {
    color: white;
    font-size: 18px;
    font-weight: 400;
    width: 45%;
    line-height: 20px;
  }

  .main .success {
    display: flex;
    align-items: center;
    gap: 20px;
  }

  .main .btn {
    background-color: var(--accent);
    padding: 15px 25px;
    border: none;
    font-size: 20px;
    font-weight: 500;
    cursor: pointer;
    box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
    transition: ease-in-out 0.3s;
  }

  .main .btn:hover {
    background-color: var(--accent);
    transform: scale(1.01);
    box-shadow: 0px 8px 8px rgba(0, 0, 0, 0.25);
  }

  @media (max-width: 720px) {
    svg {
      width: 20%;
    }

    .main{
      max-width: 90%;
    }
    .section {
      min-height: auto;
      position: static !important;
      flex-direction: column;
      padding: 2rem 0rem;
      padding-bottom: 3rem;
    }

    .main .para {
      width: 100%;
    }

    .main .content h1 {
      font-size: 32px;
      line-height:;
    }

    .main .content h1 span {
      font-size: 32px;
      line-height:;
    }

    .main h1 {
      line-height: 30px;
    }

    .main .success p {
      gap: 10px;
      font-size: 12px !important;
      width: 100%;
    }

    .main .btn {
      padding: 10px 20px;
      font-size: 16px;
    }

    .hero-container img {
      position: static !important;
    }
  }
</style>
