---
import { Image } from 'astro:assets';

const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/*.{jpeg,jpg,png,gif,svg}"
);

---

<section class="hero-container">
  <!-- background image -->
  <Image src={images["/src/assets/hero.png"]()} alt="hero image" />
  <main class="hero">
    <!-- content -->
    <div class="hero-content">
      <div class="success">
        <svg
          width="128"
          height="3"
          viewBox="0 0 128 3"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <line y1="1.5" x2="128" y2="1.5" stroke="#123346" stroke-width="3"
          ></line>
        </svg>
        <p>WE WANT TO SEE YOU SUCCED</p>
      </div>
      <h1 class="elevate">Elevate your</h1>
      <h1 class="secondary">Presales Organisation</h1>
      <p class="para">
        Empower your presales team with the strategies, tools, and leadership
        insights they need to drive success. We help you optimize processes,
        enhance collaboration, and maximize impact.
      </p>
      <a href="/contact">
        <button class="btn">Schedule a Consultation</button>
      </a>
    </div>
  </main>
</section>

<style>
  .hero-container {
    width: 100%;
    display: flex;
    position: relative; /* Ensures it respects the image inside */
    margin: auto;
    max-height: 85vh;
    min-height: 85vh;
    /* background-image: url("./hero.png");
    background-size:Â cover; */
  }

  .hero-container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    position: absolute; /* Keep it in the flow */
    z-index: -1;
  }

  .hero {
    position: relative;
    max-width: 1440px;
    margin: auto;
    width: 100%;
    height: full;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 1rem;
  }


  .hero h1 {
    line-height: 50px;
  }

  .hero .elevate {
    color: var(--accent-secondray);
    font-size: 56px;
    font-weight: 700;
  }

  .hero .secondary {
    color: var(--black);
    font-size: 56px;
    font-weight: 700;
  }

  .hero .para {
    color: var(--black);
    font-size: 18px;
    font-weight: 400;
    width: 45%;
    line-height: 20px;
  }

  .hero .success {
    display: flex;
    align-items: center;
    gap: 20px;
  }

  .hero .btn {
    background-color: var(--accent);
    padding: 15px 25px;
    border: none;
    font-size: 20px;
    font-weight: 500;
    cursor: pointer;
    box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
    transition: ease-in-out 0.3s;
    color:black !important;
  }

  .hero .btn:hover {
    background-color: var(--accent);
    transform: scale(1.025);
    box-shadow: 0px 8px 8px rgba(0, 0, 0, 0.25);
  }

  a{
    text-decoration: none;
    color:black !important;
  }



  @media (max-width: 779px) {
    svg {
      width: 20%;
    }

    a{
    text-decoration: none;
    color:black !important;
  }


    .hero-container {
      min-height: auto;
      max-height: auto;
      position: static !important;
      flex-direction: column;
      padding-bottom: 2rem;
    }

    .hero{
      max-width: 90%;
    }

    .hero .para {
      width: 100%;
    }

    .hero .hero-content h1 {
      font-size: 32px;
      line-height:;
    }

    .hero h1 {
      line-height: 30px;
    }

    .para {
      font-size: 14px !important;
      line-height: 20px;
    }

    .hero-container .success p {
      gap: 10px;
      font-size: 12px !important;
      width: 100%;
    }

    .hero .btn {
      padding: 10px 20px;
      font-size: 16px;
      color:black !important;

    }

    .hero-container img {
      position: static !important;
    }
  }
</style>
